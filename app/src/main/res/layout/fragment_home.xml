<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="iot.iiitb.com.ecohome.Home"
    tools:showIn="@layout/content_main"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/image_home_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:padding="20dp"
            android:layout_gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Effective Air Quality Index (EIAQI)"
                android:textAlignment="center"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/txt_eiaqi"
                />

            <TextView
                android:id="@+id/txt_eiaqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:textSize="20sp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />
            <TextView
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_eiaqi_status"
                android:textSize="20sp"
                android:layout_below="@id/txt_eiaqi"
                android:paddingTop="10dp"
                />
        </RelativeLayout>
        <android.support.v4.widget.Space android:layout_height="20dp" android:layout_width="match_parent"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Air Quality Index (AQI)"
                android:textAlignment="center"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/txt_aqi"
                />

            <TextView
                android:id="@+id/txt_aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:textSize="20sp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />


            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textAlignment="center"-->
                <!--android:id="@+id/tv_iaqi_status"-->
                <!--android:textSize="20sp"-->
                <!--android:paddingTop="10dp"-->
                <!--android:layout_below="@id/txt_aqi"-->
                <!--/>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carbon Monoxide"
                android:textAlignment="center"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/txt_co"
                android:layout_below="@+id/txt_aqi"
                />

            <TextView
                android:layout_below="@+id/txt_aqi"
                android:id="@+id/txt_co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:textSize="20sp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Particulate Material 10"
                android:textAlignment="center"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/txt_pm10"
                android:layout_below="@+id/txt_co"
                />

            <TextView
                android:layout_below="@+id/txt_co"
                android:id="@+id/txt_pm10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:textSize="20sp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volatile Organic Compound "
                android:textAlignment="center"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/txt_aqi"
                android:layout_below="@+id/txt_pm10"
                />

            <TextView
                android:id="@+id/txt_voc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:textSize="20sp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_below="@+id/txt_pm10"
                />

        </RelativeLayout>

        <android.support.v4.widget.Space android:layout_height="20dp" android:layout_width="match_parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/border"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thermal Comfort Index (TCI)"
                android:textAlignment="center"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/txt_tci"
                />

            <TextView
                android:id="@+id/txt_tci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:textSize="20sp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/tv_tci_status"-->
                <!--android:paddingTop="10dp"-->
                <!--android:textSize="20sp"-->
                <!--android:layout_below="@id/txt_tci"-->
                <!--android:textAlignment="center"-->
                <!--/>-->
        <!--&lt;!&ndash;<android.support.v4.widget.Space android:layout_height="20dp" android:layout_width="match_parent"/>&ndash;&gt;-->
        <RelativeLayout
            android:id="@+id/relative_humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/humidityColor"
            android:layout_below="@id/txt_tci"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textColor="@color/secondaryTextColor"
                android:textAlignment="center"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/txt_humidity"
                />

            <TextView
                android:id="@+id/txt_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX"
                android:textColor="@color/secondaryTextColor"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:textSize="15sp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />
        </RelativeLayout>
        <android.support.v4.widget.Space android:layout_height="10dp" android:layout_width="match_parent"/>
        <RelativeLayout
            android:layout_below="@id/relative_humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/secondaryDarkColor"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textAlignment="center"
                android:textColor="@color/secondaryTextColor"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/txt_temperature"
                />

            <TextView
                android:id="@+id/txt_temperature"
                android:layout_width="wrap_content"
                android:textColor="@color/secondaryTextColor"
                android:layout_height="wrap_content"
                android:text="XX"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:textSize="15sp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />
        </RelativeLayout>

        </RelativeLayout>


        <Button
            android:id="@+id/btn_getData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REFRESH"
            />
    </LinearLayout>

</FrameLayout>
